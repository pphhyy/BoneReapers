  <!-- Thetes sword -->

  <ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
    <defName>pphhyy_BoneReapers_ThetesSword</defName>
    <label>Thetes sword</label>
    <description>A sword made from the fusion of bones and metal. As a customary action in the ranks, Thetes that want a sword use their own bones as a way to show commitment. Swords are treated with high respect, their ability to cut clean and not damage the targets bones is heavily sought after.</description>
    <graphicData>
      <texPath>Weapons/NormalWeapons/ThetesSword</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <equippedAngleOffset>-65</equippedAngleOffset>

    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>1</Mass>
    </statBases>

    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costList>
      <pphhyy_HumanBones>20</pphhyy_HumanBones>
    </costList>

    <weaponTags>
      <li>pphhyy_BoneReapers_ThetesSword</li>
    </weaponTags>

    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.90</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>17</power>
        <cooldownTime>2</cooldownTime>
        <armorPenetration>0.23</armorPenetration>
      </li>
    </tools>
    <recipeMaker>
      <recipeUsers>
        <li>pphhyy_HathiyarBench</li>
      </recipeUsers>
      <researchPrerequisite>pphhyy_BoneReaperWeapons</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
    </recipeMaker>

    <modExtensions>
      <li Class="VFECore.ThingDefExtension">
        <usableWithShields>true</usableWithShields>
      </li>
    </modExtensions>
  </ThingDef>

